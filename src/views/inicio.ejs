<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link rel="icon"  href="/img/branding/Logo.svg">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/inicio.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    
    <%- include('partials/header') %>

    <section class="hero"> <!-- Inicio Banner -->
        <article class="hero__content container">
            <h3 class="hero__title">Nuevos Ingresos</h3>
            <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
            <a class="hero__link" href="/shop">SHOP</a>
        </article>
    </section> <!-- Fin Banner -->
    <% const star_wars = licencias.find(licencia => licencia.id == 1);
    const pokemon = licencias.find(licencia => licencia.id == 3);
    const harry_potter = licencias.find(licencia => licencia.id == 2);
    const licenciasUsar = [star_wars, pokemon, harry_potter]; %>
    <main class="main-container"> <!-- Inicio Main -->
        <% licenciasUsar.forEach(licencia => { %>
            <section class="collection container">  <!-- Inicio Collection -->
                <article class="collection__content mandalorian__article" >
                    <h3 class="collection__title"><%= licencia.licencia_nombre %></h3>
                    <p class="collection__text"><%= licencia.licencia_descripcion %></p>
                    <a class="collection__link" href="/shop">VER COLECCIÓN</a>
                </article>
                <picture class="collection__cover">
                    <img class="collection__cover-img" src="/uploads/<%= licencia.licencia_imagen %>.png" <%console.log(licencia.licencia_imagen)%> alt="Figura de la coleccion de <%= licencia.licencia_nombre %>">
                </picture>
            </section>
        <% }) %>

        <section class="slider container glide" > <!-- Inicio Slider -->
            <h2 class="slider__title">últimos lanzamientos</h2>
            <div class="glide__track" data-glide-el="track">
            <ul class="slider__items glide__slides">                
                <% productos.forEach(producto => { %>
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link"  href="/1/item">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="/uploads/producto_<%= producto.id %>.png" alt="Figura de <%= producto.producto_nombre %>">
                                    <img class="card-item__img--back" src="/uploads/producto_back_<%= producto.id %>.png" alt="Caja de figura de <%= producto.producto_nombre %>">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence"><%= producto.Licencium.licencia_nombre %></p>
                                    <h4 class="card-item__name"><%= producto.producto_nombre %></h4>
                                    <p class="card-item__price">$ <%= producto.precio %></p>
                                    <p class="card-item__promo"><%= producto.cuotas %> CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                <% }) %>
            </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="mdi:chevron-left"></iconify-icon></button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="mdi:chevron-right"></iconify-icon></button>
          </div>
        </section> <!-- Fin Slider -->

    </main> <!-- Fin Main -->

    <%- include('partials/footer') %> 
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="/js/glide.js"></script>
    <script src="/js/header.js"></script>
</body>
</html>